{
  "include": [
    "./resources/js/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "./resources/js",
    "module": "ES2015",
    "moduleResolution": "node",
    "target": "ES5",
    "sourceMap": true,
    "allowJs": true,
    "paths": {
      "@pages/*": [
        "resources/js/Pages/*"
      ],
      "@components/*": [
        "resources/js/components/*"
      ]
    }
  }
}
